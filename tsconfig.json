{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@src/*": ["./src/*"]
    }
  }
}
